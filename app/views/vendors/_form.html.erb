<%= form_for( [@client, @vendor] ) do |form| %>
  <div class="container" >
    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-7" style = "align : center;">
            <div class="p-5">
              <div class="text-center">
              </div>
              <form class="user">
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    <%= form.text_field :vendor_code ,:required => true,class: "form-control form-control-user",placeholder: "Vendor Code" %>
                  </div>
                  <div class="col-sm-6">
                    <%= form.text_field :name ,:required => true,class: "form-control form-control-user",placeholder: "Name" %>
                  </div>
                </div>
                <br />
                <div class="actions">
                  <%= form.submit class:"btn btn-primary" %> |
                  <%= link_to "Back" , client_vendors_path, class: "btn btn-primary "%>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>